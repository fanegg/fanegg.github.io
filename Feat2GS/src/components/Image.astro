---
import { Image as AstroImage } from "astro:assets";

interface Props {
  source: ImageMetadata;
  altText: string;
  width?: number;
  height?: number;
  className?: string;
}

const { source, altText, width, height, className = "" } = Astro.props;
---

<div class={`w-full flex justify-center ${className}`}>
  <AstroImage
    class="w-full h-auto rounded-lg object-contain"
    src={source}
    alt={altText}
    width={width}
    height={height}
  />
</div>
